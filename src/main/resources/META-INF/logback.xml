<configuration debug="false" scan="true" scanPeriod="30 seconds">
    <contextName>${LOCAL_IP}</contextName>

    <property name="serviceName" value="springboot-example"/>
    <property name="hostName" value="${LOCAL_IP}"/>
    <property name="FILE_BASE" value="/workspace/logs/service"/>
    <property name="SERVICE_LOG_FILE_NAME" value="service"/>
    <property name="FILE_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%X{REMOTE_IP}] [${serviceName}] [${hostName}] [%thread] [%-5level] %logger{36} - %X{traceId} - %msg - %ex %nopex %n"/>

    <!-- 程序日志 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
    </appender>


    <appender name="SERVICE_DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${FILE_BASE}/${SERVICE_LOG_FILE_NAME}-debug.log</File>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>32MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <fileNamePattern>
                ${FILE_BASE}/archive/${SERVICE_LOG_FILE_NAME}-debug-%d{yyyy-MM-dd}-%i.log.gz
            </fileNamePattern>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
    </appender>
    <appender name="SERVICE_DEBUG_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <appender-ref ref="SERVICE_DEBUG"/>
    </appender>


    <appender name="SERVICE_INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${FILE_BASE}/${SERVICE_LOG_FILE_NAME}-info.log</File>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>32MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <fileNamePattern>
                ${FILE_BASE}/archive/${SERVICE_LOG_FILE_NAME}-info-%d{yyyy-MM-dd}-%i.log.gz
            </fileNamePattern>
            <maxHistory>3</maxHistory>
        </rollingPolicy>
    </appender>
    <appender name="SERVICE_INFO_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <appender-ref ref="SERVICE_INFO"/>
    </appender>


    <appender name="SERVICE_WARN" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${FILE_BASE}/${SERVICE_LOG_FILE_NAME}-warn.log</File>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>32MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <fileNamePattern>
                ${FILE_BASE}/archive/${SERVICE_LOG_FILE_NAME}-warn-%d{yyyy-MM-dd}-%i.log.gz
            </fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>
    <appender name="SERVICE_WARN_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <appender-ref ref="SERVICE_WARN"/>
    </appender>


    <appender name="SERVICE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${FILE_BASE}/${SERVICE_LOG_FILE_NAME}-error.log</File>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder>
            <pattern>${FILE_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>32MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <fileNamePattern>
                ${FILE_BASE}/archive/${SERVICE_LOG_FILE_NAME}-error-%d{yyyy-MM-dd}-%i.log.gz
            </fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>
    <appender name="SERVICE_ERROR_ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <appender-ref ref="SERVICE_ERROR"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="SERVICE_INFO"/>
        <appender-ref ref="SERVICE_WARN"/>
        <appender-ref ref="SERVICE_ERROR"/>
    </root>
</configuration>